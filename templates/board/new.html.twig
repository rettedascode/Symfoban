{% extends 'base.html.twig' %}

{% block title %}New Board - Symfoban{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Create New Board</h2>

    {% if templates|length > 0 %}
        <div class="bg-white dark:bg-gray-800 shadow-lg rounded-xl px-6 py-6 mb-6 border border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Or use a template:</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {% for template in templates %}
                    <a href="{{ path('app_board_new_from_template', {'templateId': template.id}) }}" class="block p-4 border border-gray-200 dark:border-gray-700 rounded-lg hover:border-indigo-500 dark:hover:border-indigo-400 hover:bg-indigo-50 dark:hover:bg-indigo-900/20 transition-colors">
                        <h4 class="font-semibold text-gray-900 dark:text-white mb-2">{{ template.name }}</h4>
                        {% if template.description %}
                            <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">{{ template.description }}</p>
                        {% endif %}
                        {% set columnCount = template.columns|length %}
                        <div class="text-xs text-gray-500 dark:text-gray-500">
                            {{ columnCount }} column{{ columnCount != 1 ? 's' : '' }}
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <div class="bg-white dark:bg-gray-800 shadow-lg rounded-xl px-8 pt-8 pb-8 mb-4 border border-gray-200 dark:border-gray-700">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div>
                {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:focus:ring-indigo-400 focus:border-transparent transition-colors'}}) }}
                {{ form_errors(form.name, {'attr': {'class': 'mt-1 text-sm text-red-600 dark:text-red-400'}}) }}
            </div>

            <div class="flex items-center justify-between pt-4">
                <a href="{{ path('app_board_index') }}" class="text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 font-medium transition-colors">
                    ‚Üê Back to Boards
                </a>
                <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 text-white font-semibold py-3 px-6 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-colors shadow-md hover:shadow-lg">
                    Create Board
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}


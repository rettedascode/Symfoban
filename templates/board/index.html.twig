{% extends 'base.html.twig' %}

{% block title %}Boards - Symfoban{% endblock %}

{% block body %}
<div class="mb-6 flex justify-between items-center">
    <h2 class="text-3xl font-bold text-gray-900">Kanban Boards</h2>
    <a href="{{ path('app_board_new') }}" class="bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md transition-colors">
        + New Board
    </a>
</div>

{% if boards|length > 0 %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for board in boards %}
            <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow p-6">
                <h3 class="text-xl font-semibold text-gray-900 mb-2">
                    <a href="{{ path('app_board_show', {'id': board.id}) }}" class="hover:text-indigo-600 transition-colors">
                        {{ board.name }}
                    </a>
                </h3>
                <div class="text-sm text-gray-500 mb-4">
                    <p>{{ board.columns|length }} column{{ board.columns|length != 1 ? 's' : '' }}</p>
                    <p>Created: {{ board.createdAt|date('Y-m-d H:i') }}</p>
                </div>
                <div class="flex gap-2 mt-4">
                    <a href="{{ path('app_board_show', {'id': board.id}) }}" class="text-indigo-600 hover:text-indigo-800 text-sm font-medium">
                        View â†’
                    </a>
                    <a href="{{ path('app_board_edit', {'id': board.id}) }}" class="text-gray-600 hover:text-gray-800 text-sm font-medium">
                        Edit
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="bg-white rounded-lg shadow-md p-12 text-center">
        <p class="text-gray-500 text-lg mb-4">No boards yet. Create your first board to get started!</p>
        <a href="{{ path('app_board_new') }}" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-6 rounded-md transition-colors">
            Create Board
        </a>
    </div>
{% endif %}
{% endblock %}


{% extends 'base.html.twig' %}

{% block title %}Edit Column - Symfoban{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <h2 class="text-3xl font-bold text-gray-900 mb-6">Edit Column</h2>

    {{ form_start(form, {'attr': {'class': 'bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4'}}) }}
        <div class="mb-4">
            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
            {{ form_widget(form.name) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.position, null, {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
            {{ form_widget(form.position) }}
            {{ form_errors(form.position) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.board, null, {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
            {{ form_widget(form.board) }}
            {{ form_errors(form.board) }}
        </div>

        <div class="flex items-center justify-between">
            <a href="{{ path('app_board_show', {'id': column.board.id}) }}" class="text-gray-600 hover:text-gray-800 font-medium">
                ‚Üê Back to Board
            </a>
            <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition-colors">
                Update Column
            </button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}


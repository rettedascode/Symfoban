{% extends 'base.html.twig' %}

{% block title %}Register - Symfoban{% endblock %}

{% block body %}
<div class="max-w-md mx-auto mt-12">
    <div class="bg-white dark:bg-gray-800 shadow-lg rounded-xl px-8 pt-8 pb-8 mb-4 border border-gray-200 dark:border-gray-700">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">Register</h2>

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
            <div>
                {{ form_label(registrationForm.name, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                {{ form_widget(registrationForm.name, {'attr': {'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:focus:ring-indigo-400 focus:border-transparent transition-colors'}}) }}
                {{ form_errors(registrationForm.name, {'attr': {'class': 'mt-1 text-sm text-red-600 dark:text-red-400'}}) }}
            </div>

            <div>
                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:focus:ring-indigo-400 focus:border-transparent transition-colors'}}) }}
                {{ form_errors(registrationForm.email, {'attr': {'class': 'mt-1 text-sm text-red-600 dark:text-red-400'}}) }}
            </div>

            <div>
                {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:focus:ring-indigo-400 focus:border-transparent transition-colors'}}) }}
                {{ form_errors(registrationForm.plainPassword.first, {'attr': {'class': 'mt-1 text-sm text-red-600 dark:text-red-400'}}) }}
            </div>

            <div>
                {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:focus:ring-indigo-400 focus:border-transparent transition-colors'}}) }}
                {{ form_errors(registrationForm.plainPassword.second, {'attr': {'class': 'mt-1 text-sm text-red-600 dark:text-red-400'}}) }}
            </div>

            <div class="pt-4">
                <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 text-white font-semibold py-3 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-colors shadow-md hover:shadow-lg">
                    Register
                </button>
            </div>

            <div class="text-center pt-2">
                <a href="{{ path('app_user_index') }}" class="text-indigo-600 dark:text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-300 text-sm font-medium transition-colors">
                    ‚Üê Back to Users
                </a>
            </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}


{% extends 'base.html.twig' %}

{% block title %}New Task - Symfoban{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Create New Task</h2>

    <div class="bg-white dark:bg-gray-800 shadow-lg rounded-xl px-8 pt-8 pb-8 mb-4 border border-gray-200 dark:border-gray-700">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div>
                {{ form_label(form.title, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:focus:ring-indigo-400 focus:border-transparent transition-colors'}}) }}
                {{ form_errors(form.title, {'attr': {'class': 'mt-1 text-sm text-red-600 dark:text-red-400'}}) }}
            </div>

            <div>
                {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:focus:ring-indigo-400 focus:border-transparent transition-colors resize-none'}}) }}
                {{ form_errors(form.description, {'attr': {'class': 'mt-1 text-sm text-red-600 dark:text-red-400'}}) }}
            </div>

            <div>
                {{ form_label(form.position, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                {{ form_widget(form.position, {'attr': {'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:focus:ring-indigo-400 focus:border-transparent transition-colors'}}) }}
                {{ form_errors(form.position, {'attr': {'class': 'mt-1 text-sm text-red-600 dark:text-red-400'}}) }}
            </div>

            <div>
                {{ form_label(form.priority, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                {{ form_widget(form.priority, {'attr': {'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:focus:ring-indigo-400 focus:border-transparent transition-colors'}}) }}
                {{ form_errors(form.priority, {'attr': {'class': 'mt-1 text-sm text-red-600 dark:text-red-400'}}) }}
            </div>

            <div>
                {{ form_label(form.dueDate, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                {{ form_widget(form.dueDate, {'attr': {'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:focus:ring-indigo-400 focus:border-transparent transition-colors'}}) }}
                {{ form_errors(form.dueDate, {'attr': {'class': 'mt-1 text-sm text-red-600 dark:text-red-400'}}) }}
            </div>

            <div>
                {{ form_label(form.column, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                {{ form_widget(form.column, {'attr': {'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:focus:ring-indigo-400 focus:border-transparent transition-colors'}}) }}
                {{ form_errors(form.column, {'attr': {'class': 'mt-1 text-sm text-red-600 dark:text-red-400'}}) }}
            </div>

            <div class="flex items-center justify-between pt-4">
                <a href="{{ path('app_board_index') }}" class="text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 font-medium transition-colors">
                    ‚Üê Back to Boards
                </a>
                <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 text-white font-semibold py-3 px-6 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 transition-colors shadow-md hover:shadow-lg">
                    Create Task
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

